// Variables globales para controlar galer铆as
let fotoActual = 0;
let videoActual = 0;
let fotosFiltradas = [...fotosGaleria];
let videosFiltrados = [...videosGaleria];
let categoriaActualFotos = 'todas';
let categoriaActualVideos = 'todas';

// Funci贸n para actualizar contadores en la p谩gina principal
function actualizarContadores() {
    document.getElementById('contador-fotos').textContent = `${fotosGaleria.length} fotos`;
    document.getElementById('contador-videos').textContent = `${videosGaleria.length} videos`;
}

// Funci贸n para activar botones de categor铆a
function activarCategoriaBoton(categoria, tipo) {
    document.querySelectorAll('.categoria-btn').forEach(btn => {
        if (btn.getAttribute('data-tipo') === tipo) {
            btn.classList.remove('active');
        }
    });
    
    const botonActivo = document.querySelector(`.categoria-btn[data-categoria="${categoria}"][data-tipo="${tipo}"]`);
    if (botonActivo) {
        botonActivo.classList.add('active');
    }
}

// Funci贸n para filtrar galer铆a desde la p谩gina principal
function filtrarGaleria(categoria, tipo) {
    if (tipo === 'fotos') {
        categoriaActualFotos = categoria;
        activarCategoriaBoton(categoria, tipo);
    } else if (tipo === 'videos') {
        categoriaActualVideos = categoria;
        activarCategoriaBoton(categoria, tipo);
    }
}
// Funci贸n para abrir galer铆a
function abrirGaleria(tipo) {
    if (tipo === 'fotos') {
        fotoActual = 0;
        filtrarFotosModal(categoriaActualFotos);
        mostrarFoto(0);
        mostrarModal('galeria-fotos-modal');
    } else if (tipo === 'videos') {
        videoActual = 0;
        filtrarVideosModal(categoriaActualVideos);
        mostrarVideo(0);
        mostrarModal('galeria-videos-modal');
    }
}

function filtrarFotosModal(categoria) {
    // Siempre comenzar con "todas"
    if (!categoria) categoria = 'todas';
    
    if (categoria === 'todas') {
        fotosFiltradas = [...fotosGaleria];
    } else {
        fotosFiltradas = fotosGaleria.filter(foto => 
            foto.categorias.includes(categoria)
        );
    }
    
    // Actualizar selector
    const selector = document.getElementById('filtro-categoria-fotos');
    if (selector) selector.value = categoria;
    
    // Reiniciar 铆ndice
    fotoActual = 0;
    
    // Mostrar primera foto
    if (fotosFiltradas.length > 0) {
        mostrarFoto(0);
        cargarMiniaturas();
    }
    
    // Actualizar contador
    const contador = document.getElementById('contador-filtradas');
    if (contador) contador.textContent = fotosFiltradas.length;
}
    
    // Actualizar selector
    document.getElementById('filtro-categoria-fotos').value = categoria;
    
    // Reiniciar 铆ndice
    fotoActual = 0;
    
    // Mostrar primera foto del filtro
    if (fotosFiltradas.length > 0) {
        mostrarFoto(0);
        cargarMiniaturas();
    } else {
        // Si no hay fotos en la categor铆a
        document.getElementById('foto-actual').src = '';
        document.getElementById('titulo-foto').textContent = 'No hay fotos en esta categor铆a';
        document.getElementById('descripcion-foto').textContent = '';
        document.getElementById('miniaturas-fotos').innerHTML = '<p class="text-gray-300 text-center p-4">No hay fotos disponibles</p>';
        document.getElementById('contador-filtradas').textContent = '0 fotos';
    }
    
    // Actualizar contador
    document.getElementById('contador-filtradas').textContent = `${fotosFiltradas.length} fotos`;


function mostrarFoto(indice) {
    if (fotosFiltradas.length === 0) return;
    
    if (indice >= 0 && indice < fotosFiltradas.length) {
        fotoActual = indice;
        const foto = fotosFiltradas[indice];
        
        // Actualizar imagen principal
        document.getElementById('foto-actual').src = foto.url;
        document.getElementById('foto-actual').alt = foto.titulo;
        
        // Actualizar informaci贸n
        document.getElementById('titulo-foto').textContent = foto.titulo;
        document.getElementById('descripcion-foto').textContent = foto.descripcion;
        document.getElementById('fecha-foto').textContent = foto.fecha;
        document.getElementById('foto-indicador').textContent = `${indice + 1}/${fotosFiltradas.length}`;
        
        // Actualizar categor铆as
        const categoriasContainer = document.getElementById('categorias-foto');
        categoriasContainer.innerHTML = '';
        
        foto.categorias.forEach(cat => {
            const categoriaBadge = document.createElement('span');
            categoriaBadge.className = `categoria-badge ${cat}`;
            categoriaBadge.textContent = getNombreCategoria(cat);
            categoriasContainer.appendChild(categoriaBadge);
        });
        
        // Actualizar miniatura activa
        document.querySelectorAll('.miniatura-foto').forEach((miniatura, i) => {
            if (i === indice) {
                miniatura.classList.add('ring-4', 'ring-blue-500', 'ring-opacity-100');
                miniatura.classList.remove('opacity-70');
            } else {
                miniatura.classList.remove('ring-4', 'ring-blue-500', 'ring-opacity-100');
                miniatura.classList.add('opacity-70');
            }
        });
    }
}

function cargarMiniaturas() {
    const contenedor = document.getElementById('miniaturas-fotos');
    contenedor.innerHTML = '';
    
    fotosFiltradas.forEach((foto, indice) => {
        const miniatura = document.createElement('div');
        miniatura.className = `cursor-pointer miniatura-foto transition-all duration-200 ${indice === 0 ? 'ring-4 ring-blue-500 ring-opacity-100' : 'opacity-70 hover:opacity-100'}`;
        miniatura.onclick = () => mostrarFoto(indice);
        miniatura.innerHTML = `
            <img src="${foto.url}" 
                 alt="${foto.titulo}" 
                 class="w-full h-24 object-cover rounded">
        `;
        contenedor.appendChild(miniatura);
    });
}

function fotoAnterior() {
    if (fotosFiltradas.length === 0) return;
    const nuevoIndice = (fotoActual - 1 + fotosFiltradas.length) % fotosFiltradas.length;
    mostrarFoto(nuevoIndice);
}

function fotoSiguiente() {
    if (fotosFiltradas.length === 0) return;
    const nuevoIndice = (fotoActual + 1) % fotosFiltradas.length;
    mostrarFoto(nuevoIndice);
}

// Funciones para galer铆a de videos
function filtrarVideosModal(categoria) {
    if (categoria === 'todas') {
        videosFiltrados = [...videosGaleria];
    } else {
        videosFiltrados = videosGaleria.filter(video => 
            video.categorias.includes(categoria)
        );
    }
    
    // Actualizar selector
    document.getElementById('filtro-categoria-videos').value = categoria;
    
    // Reiniciar 铆ndice
    videoActual = 0;
    
    // Mostrar primer video del filtro
    if (videosFiltrados.length > 0) {
        mostrarVideo(0);
        cargarListaVideos();
    } else {
        // Si no hay videos en la categor铆a
        document.getElementById('video-actual').src = '';
        document.getElementById('titulo-video').textContent = 'No hay videos en esta categor铆a';
        document.getElementById('descripcion-video').textContent = '';
        document.getElementById('lista-videos').innerHTML = '<p class="text-gray-300 text-center p-4">No hay videos disponibles</p>';
        document.getElementById('contador-videos-filtradas').textContent = '0 videos';
    }
    
    // Actualizar contador
    document.getElementById('contador-videos-filtradas').textContent = `${videosFiltrados.length} videos`;
}

function mostrarVideo(indice) {
    if (videosFiltrados.length === 0) return;
    
    if (indice >= 0 && indice < videosFiltrados.length) {
        videoActual = indice;
        const video = videosFiltrados[indice];
        
        // Actualizar video principal
        document.getElementById('video-actual').src = video.url;
        
        // Actualizar informaci贸n
        document.getElementById('titulo-video').textContent = video.titulo;
        document.getElementById('descripcion-video').textContent = video.descripcion;
        document.getElementById('fecha-video').textContent = video.fecha;
        document.getElementById('duracion-video').textContent = video.duracion;
        document.getElementById('video-indicador').textContent = `${indice + 1}/${videosFiltrados.length}`;
        
        // Actualizar categor铆as
        const categoriasContainer = document.getElementById('categorias-video');
        categoriasContainer.innerHTML = '';
        
        video.categorias.forEach(cat => {
            const categoriaBadge = document.createElement('span');
            categoriaBadge.className = `categoria-badge ${cat}`;
            categoriaBadge.textContent = getNombreCategoria(cat);
            categoriasContainer.appendChild(categoriaBadge);
        });
        
        // Actualizar video activo en lista
        document.querySelectorAll('.item-video').forEach((item, i) => {
            if (i === indice) {
                item.classList.add('bg-gray-700', 'border-l-4', 'border-blue-500');
                item.classList.remove('hover:bg-gray-700');
            } else {
                item.classList.remove('bg-gray-700', 'border-l-4', 'border-blue-500');
                item.classList.add('hover:bg-gray-700');
            }
        });
    }
}

function cargarListaVideos() {
    const contenedor = document.getElementById('lista-videos');
    contenedor.innerHTML = '';
    
    videosFiltrados.forEach((video, indice) => {
        const item = document.createElement('div');
        item.className = `cursor-pointer p-3 rounded-lg item-video transition-all ${indice === 0 ? 'bg-gray-700 border-l-4 border-blue-500' : 'hover:bg-gray-700'}`;
        item.onclick = () => mostrarVideo(indice);
        
        // Obtener primera categor铆a para el 铆cono
        const primeraCategoria = video.categorias[0];
        
        item.innerHTML = `
            <div class="flex items-start">
                <div class="flex-shrink-0">
                    <div class="w-12 h-12 bg-gradient-to-br from-${getColorCategoria(primeraCategoria)}-600 to-${getColorCategoria(primeraCategoria)}-800 rounded flex items-center justify-center">
                        <i class="fas fa-play text-white text-sm"></i>
                    </div>
                </div>
                <div class="ml-3 flex-1">
                    <h5 class="font-medium text-white text-sm line-clamp-2">${video.titulo}</h5>
                    <div class="flex items-center mt-1">
                        <span class="text-xs text-gray-400 mr-3">${video.duracion}</span>
                        <div class="flex flex-wrap gap-1">
                            ${video.categorias.map(cat => 
                                `<span class="text-xs px-2 py-0.5 rounded bg-gray-700 text-gray-300">${getNombreCategoriaCorto(cat)}</span>`
                            ).join('')}
                        </div>
                    </div>
                </div>
            </div>
        `;
        contenedor.appendChild(item);
    });
}

function videoAnterior() {
    if (videosFiltrados.length === 0) return;
    const nuevoIndice = (videoActual - 1 + videosFiltrados.length) % videosFiltrados.length;
    mostrarVideo(nuevoIndice);
}

function videoSiguiente() {
    if (videosFiltrados.length === 0) return;
    const nuevoIndice = (videoActual + 1) % videosFiltrados.length;
    mostrarVideo(nuevoIndice);
}

// Funciones auxiliares para categor铆as
function getNombreCategoria(codigo) {
    const categorias = {
        'academico': 'Acad茅mico',
        'cultural': 'Cultural',
        'deportes': 'Deportes',
        'graduacion': 'Graduaci贸n',
        'robotica': 'Rob贸tica'
    };
    return categorias[codigo] || codigo;
}

function getNombreCategoriaCorto(codigo) {
    const categorias = {
        'academico': 'Acad',
        'cultural': 'Cult',
        'deportes': 'Dep',
        'graduacion': 'Grad',
        'robotica': 'Rob'
    };
    return categorias[codigo] || codigo;
}

function getColorCategoria(codigo) {
    const colores = {
        'academico': 'blue',
        'cultural': 'purple',
        'deportes': 'green',
        'graduacion': 'yellow',
        'robotica': 'red'
    };
    return colores[codigo] || 'gray';
}

// Cerrar modal de galer铆a con Escape
document.addEventListener('keydown', function(e) {
    if (e.key === 'Escape') {
        const modales = document.querySelectorAll('.modal');
        modales.forEach(modal => {
            if (!modal.classList.contains('hidden')) {
                modal.classList.add('hidden');
                document.body.style.overflow = 'auto';
                
                // Pausar video si est谩 reproduci茅ndose
                const videoIframe = document.getElementById('video-actual');
                if (videoIframe && videoIframe.src) {
                    videoIframe.src = videoIframe.src; // Esto reinicia el iframe
                }
            }
        });
    }
    
    // Navegaci贸n con teclado en galer铆as
    if (!document.getElementById('galeria-fotos-modal').classList.contains('hidden')) {
        if (e.key === 'ArrowLeft') {
            fotoAnterior();
            e.preventDefault();
        } else if (e.key === 'ArrowRight') {
            fotoSiguiente();
            e.preventDefault();
        }
    }
    
    if (!document.getElementById('galeria-videos-modal').classList.contains('hidden')) {
        if (e.key === 'ArrowLeft') {
            videoAnterior();
            e.preventDefault();
        } else if (e.key === 'ArrowRight') {
            videoSiguiente();
            e.preventDefault();
        }
    }
});

// Inicializar cuando el DOM est茅 cargado
document.addEventListener('DOMContentLoaded', function() {
    actualizarContadores();
    
    // Inicializar botones de categor铆a
    document.querySelectorAll('.categoria-btn').forEach(btn => {
        if (btn.getAttribute('data-categoria') === 'todas') {
            btn.classList.add('active');
        }
    });
});

// Funci贸n para cerrar modal mejorada
function cerrarModal(modalId) {
    document.getElementById(modalId).classList.add('hidden');
    document.body.style.overflow = 'auto';
    
    // Pausar video si est谩 reproduci茅ndose
    if (modalId === 'galeria-videos-modal') {
        const videoIframe = document.getElementById('video-actual');
        if (videoIframe && videoIframe.src) {
            videoIframe.src = videoIframe.src; // Esto reinicia el iframe
        }
    }
}


    </script>
