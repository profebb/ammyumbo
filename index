<script>
// Funcionalidad de b煤squeda y filtro para docentes - VERSIN CORREGIDA
document.addEventListener('DOMContentLoaded', function() {
    // Agregar un retraso para asegurar que el DOM est茅 completamente cargado
    setTimeout(function() {
        inicializarFiltroDocentes();
    }, 100);
});

function inicializarFiltroDocentes() {
    const buscarInput = document.getElementById('buscar-docente');
    const filtroSelect = document.getElementById('filtro-area');
    const contador = document.getElementById('contador-resultados');
    
    // Verificar que los elementos existan
    if (!buscarInput || !filtroSelect || !contador) {
        console.log('Elementos de filtro no encontrados');
        return;
    }
    
    console.log('Inicializando filtro de docentes...');
    
    // Funci贸n para filtrar docentes
    function filtrarDocentes() {
        console.log('Filtrando docentes...');
        
        const terminoBusqueda = buscarInput.value.toLowerCase();
        const filtroArea = filtroSelect.value;
        
        // Obtener TODAS las filas de la tabla, incluyendo encabezados
        const todasLasFilas = document.querySelectorAll('#lista-docentes tr');
        let filasVisibles = 0;
        let totalDocentes = 0;
        
        // Primera pasada: contar filas de docentes (sin encabezados de secci贸n)
        todasLasFilas.forEach(fila => {
            if (!fila.hasAttribute('colspan')) {
                totalDocentes++;
            }
        });
        
        // Segunda pasada: filtrar
        let seccionActual = null;
        let tieneDocentesVisiblesEnSeccion = false;
        
        todasLasFilas.forEach(fila => {
            // Verificar si es un encabezado de secci贸n
            if (fila.hasAttribute('colspan')) {
                // Si llegamos a un nuevo encabezado, reiniciamos
                seccionActual = fila;
                tieneDocentesVisiblesEnSeccion = false;
                
                // Por defecto ocultamos el encabezado
                fila.classList.add('hidden');
                return;
            }
            
            // Es una fila de docente
            const nombre = fila.cells[0]?.textContent.toLowerCase() || '';
            const area = fila.cells[1]?.textContent || '';
            const correo = fila.cells[2]?.textContent.toLowerCase() || '';
            
            // Verificar coincidencias
            const coincideBusqueda = terminoBusqueda === '' || 
                nombre.includes(terminoBusqueda) || 
                area.toLowerCase().includes(terminoBusqueda) ||
                correo.includes(terminoBusqueda);
            
            const coincideArea = filtroArea === '' || area.includes(filtroArea);
            
            if (coincideBusqueda && coincideArea) {
                // Mostrar docente
                fila.classList.remove('hidden');
                filasVisibles++;
                
                // Si hay docente visible, tambi茅n mostrar el encabezado de su secci贸n
                if (seccionActual) {
                    tieneDocentesVisiblesEnSeccion = true;
                    seccionActual.classList.remove('hidden');
                }
            } else {
                // Ocultar docente
                fila.classList.add('hidden');
            }
        });
        
        // Actualizar contador
        contador.textContent = `Mostrando ${filasVisibles} de ${totalDocentes} docentes`;
        console.log('Filtro aplicado:', filasVisibles, 'docentes visibles');
    }
    
    // Agregar event listeners
    buscarInput.addEventListener('input', filtrarDocentes);
    filtroSelect.addEventListener('change', filtrarDocentes);
    
    // Inicializar contador
    const totalFilas = document.querySelectorAll('#lista-docentes tr:not([colspan])').length;
    contador.textContent = `Mostrando ${totalFilas} de ${totalFilas} docentes`;
    
    console.log('Filtro inicializado correctamente');
}

// Tambi茅n agregar funcionalidad de copiar correo
function configurarCopiarCorreo() {
    document.querySelectorAll('#lista-docentes td.text-blue-600').forEach(celda => {
        celda.style.cursor = 'pointer';
        celda.title = 'Haz clic para copiar el correo';
        
        celda.addEventListener('click', function(e) {
            e.stopPropagation(); // Evitar propagaci贸n del evento
            
            const correo = this.textContent.trim();
            if (correo) {
                // Usar el API del portapapeles moderno
                if (navigator.clipboard && navigator.clipboard.writeText) {
                    navigator.clipboard.writeText(correo).then(() => {
                        mostrarFeedbackCopiado(this);
                    }).catch(err => {
                        console.error('Error al copiar:', err);
                        copiarFallback(correo, this);
                    });
                } else {
                    // Fallback para navegadores antiguos
                    copiarFallback(correo, this);
                }
            }
        });
    });
}

function mostrarFeedbackCopiado(elemento) {
    const originalText = elemento.textContent;
    const originalColor = elemento.style.color;
    
    elemento.textContent = ' Copiado';
    elemento.style.color = '#10b981'; // Verde
    
    setTimeout(() => {
        elemento.textContent = originalText;
        elemento.style.color = originalColor;
    }, 2000);
}

function copiarFallback(texto, elemento) {
    // M茅todo antiguo usando textarea
    const textarea = document.createElement('textarea');
    textarea.value = texto;
    document.body.appendChild(textarea);
    textarea.select();
    
    try {
        document.execCommand('copy');
        mostrarFeedbackCopiado(elemento);
    } catch (err) {
        console.error('Error al copiar (fallback):', err);
        alert('No se pudo copiar el correo. Intenta manualmente: ' + texto);
    }
    
    document.body.removeChild(textarea);
}

// Ejecutar cuando el DOM est茅 listo
document.addEventListener('DOMContentLoaded', function() {
    // Inicializar filtro despu茅s de un peque帽o retraso
    setTimeout(function() {
        inicializarFiltroDocentes();
        configurarCopiarCorreo();
    }, 500); // Aumentar el tiempo para asegurar que el modal est茅 disponible
});

</script>

